# Environment variables for HyperLoops frontend

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id_here

# Contract addresses for different networks
NEXT_PUBLIC_LOTTERY_CONTRACT_MAINNET=0x...
NEXT_PUBLIC_LOTTERY_CONTRACT_TESTNET=0x5FbDB2315678afecb367f032d93F642f64180aa3

# HyperLend contract addresses (these are fixed)
NEXT_PUBLIC_HYPERLEND_POOL=0x00A89d7a5A02160f20150EbEA7a2b5E4879A1A8b
NEXT_PUBLIC_HYPERLEND_DATA_PROVIDER=0x5481bf8d3946E6A3168640c1D7523eB59F055a29
NEXT_PUBLIC_WHYPE_TOKEN=0x5555555555555555555555555555555555555555

# Network configuration
NEXT_PUBLIC_DEFAULT_CHAIN_ID=998
NEXT_PUBLIC_ENABLE_TESTNETS=true

# API endpoints
NEXT_PUBLIC_HYPERLIQUID_API=https://api.hyperliquid.xyz
NEXT_PUBLIC_HYPERLIQUID_TESTNET_API=https://api.hyperliquid-testnet.xyz

# Analytics and monitoring (optional)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Feature flags
NEXT_PUBLIC_ENABLE_DEMO_DATA=true
NEXT_PUBLIC_ENABLE_ADVANCED_FEATURES=false
NEXT_PUBLIC_ENABLE_SOUNDS=false

# App metadata
NEXT_PUBLIC_APP_URL=https://hyperloops.xyz
NEXT_PUBLIC_APP_NAME=HyperLoops
NEXT_PUBLIC_APP_DESCRIPTION=No-Loss Lottery on Hyperliquid EVM